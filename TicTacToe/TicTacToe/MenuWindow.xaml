        <TextBlock HorizontalAlignment="Left" Margin="398,74,0,0"  Foreground="BlueViolet"  TextWrapping="Wrap" Text="TicTacToc" VerticalAlignment="Top" Height="72" Width="241" FontSize="50" FontWeight="Bold"/>

